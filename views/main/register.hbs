<div class="row justify-content-center mt-3">
    <div class="col-xs-12 col-md-6">
        <h1 class="mb-4">Register Account</h1>
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input 
                name="name" 
                type="text"
                value="{{form.name}}" 
                class="form-control {{#if errors.name}} invalid {{/if}}"> 
                {{#each errors.name}}
                    <div>
                        <span class="text-danger">{{ message }}</span>
                    </div>
                {{/each}}
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input 
                name="email" 
                type="email" 
                value="{{form.email}}"
                class="form-control {{#if errors.email}} invalid {{/if}}"> 
                {{#each errors.email}}
                    <div>
                        <span class="text-danger">{{ message }}</span>
                    </div>
                {{/each}}
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input 
                name="password" 
                type="password"
                value="{{form.password}}" 
                class="form-control {{#if errors.password}} invalid {{/if}}">
                {{#each errors.password}}
                    <div>
                        <span class="text-danger">{{ message }}</span>
                    </div>
                {{/each}}
            </div>
            <div class="form-group">
                <label for="password">Confirm Password</label>
                <input 
                name="confirmPassword" 
                type="password" 
                value="{{form.confirmPassword}}"
                class="form-control {{#if errors.confirmPassword}} invalid {{/if}}">
                {{#each errors.confirmPassword}}
                    <div>
                        <span class="text-danger">{{ message }}</span>
                    </div>
                {{/each}}
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>